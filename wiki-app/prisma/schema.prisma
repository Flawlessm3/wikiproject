generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  // Vercel Postgres (Neon) uses a pooled URL for queries and a direct URL for migrations.
  // Set both in your .env / Vercel environment variables.
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Single-row table â€” the entire wiki is stored as one JSON document.
// This mirrors the data/wiki.json shape and requires no schema migration
// when wiki content changes.
model WikiStore {
  id        Int      @id @default(autoincrement())
  data      Json
  updatedAt DateTime @updatedAt
}
